{
  "name": "triplex-fp",
  "version": "0.2.0",
  "repository": {
    "url": "https://github.com/soul-codes/triplex-fp"
  },
  "scripts": {
    "ts": "ttsc -b -w ./src/@build/tsconfig.json",
    "prepare": "rimraf lib && ttsc -p ./src/@build/tsconfig.json && pnpm docgen && ttsc -p tsconfig.lib.json",
    "test": "node --experimental-vm-modules --experimental-specifier-resolution=node node_modules/jest/bin/jest.js",
    "docgen": "node target/docs/index.js",
    "release": "release-it",
    "tidy": "tslint -c tslint-import.json --project tsconfig.json src/**/*.{ts,tsx} --fix && prettier --write src/**/*.{ts,tsx}"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**",
    "src/lib/**"
  ],
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "types": "./lib/index.d.ts"
    },
    "./Triplex": {
      "import": "./lib/Triplex.js",
      "types": "./lib/Triplex.d.ts"
    },
    "./Unit": {
      "import": "./lib/Unit.js",
      "types": "./lib/Unit.d.ts"
    },
    "./WeightedProgress": {
      "import": "./lib/WeightedProgress.js",
      "types": "./lib/WeightedProgress.d.ts"
    },
    "./RetryableError": {
      "import": "./lib/RetryableError.js",
      "types": "./lib/RetryableError.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "Triplex": [
        "./lib/Triplex.d.ts"
      ],
      "Unit": [
        "./lib/Unit.d.ts"
      ],
      "WeightedProgress": [
        "./lib/WeightedProgress.d.ts"
      ],
      "RetryableError": [
        "./lib/RetryableError.d.ts"
      ]
    }
  },
  "type": "module",
  "devDependencies": {
    "@release-it/conventional-changelog": "2.0.0",
    "@soul-codes-dev/ts-transform-static-resolve-path": "2.0.0-0",
    "@types/jest": "^24.9.1",
    "@types/mdast": "^3.0.10",
    "@types/node": "^14.18.36",
    "@types/pkg-dir": "^2.0.1",
    "@types/rimraf": "^3.0.2",
    "@types/source-map-support": "^0.5.6",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "import-sort-style-module": "^6.0.0",
    "jest": "^29.4.1",
    "kbts": "^0.4.7",
    "pkg-dir": "^7.0.0",
    "prettier": "^2.8.3",
    "prettier-plugin-import-sort": "^0.0.6",
    "release-it": "14.2.1",
    "rimraf": "^3.0.2",
    "source-map-loader": "^1.1.3",
    "source-map-support": "^0.5.21",
    "ts-morph": "^17.0.1",
    "tslint": "^6.1.3",
    "tslint-etc": "^1.13.10",
    "ttypescript": "1.5.13",
    "typescript": "^4.6.3"
  },
  "release-it": {
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    },
    "npm": {
      "publish": true
    },
    "hooks": {
      "before:init": [
        "pnpm test -- --passWithNoTests"
      ],
      "before:git:bump": "pnpm docgen && git add -A",
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    }
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "watchPathIgnorePatterns": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "<rootDir>/target/**/__test__/**/*.test.js"
    ]
  },
  "peerDependencies": {
    "fp-ts": "^2.13.1"
  }
}
